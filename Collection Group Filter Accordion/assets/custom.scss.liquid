.filter-group {
    border-top: 1px solid rgb(229, 229, 229);
    transition: all 0.3s ease-in;
    overflow: hidden;
    height: 52px;

    h5 {
        cursor: pointer;
        position: relative;
        outline: none;
        padding: 12px 0px 0px;
        display: block;

        &:after {
            min-width: 30px;
            content: "+";
            font-weight: 700;
            text-align: center;
            float: right;
            margin: 0 0 0 auto;
            padding: 0 5px;
            transition: all .2s ease-in-out;
        }
    }

    .filter-list {
        margin-top: 12px;
        overflow: hidden;
        transition: all .2s ease-in-out;
    }

    &.expanded {
        h5 {
            padding-bottom: 0;

            &:after {
                content: "-";
            }
        }

        .filter-list {
            overflow-y: auto;
        }
    }

    ul {
        li {
            margin: 5px 0;

            &.color {
                display: inline-block;
                text-align: center;
                margin-right: 15px;
                position: relative;

                .swatch {
                    border-radius: 50%;
                    width: 30px;
                    height: 30px;
                    display: block;
                    margin: 0 auto;
                    border: 1px solid #eaeaea;
                    background-repeat: none;
                }

                a {
                    &.active {
                        svg {
                            position: absolute;
                            top: 8px;
                            left: 50%;
                            transform: translateX(-50%);
                            fill: white;
                        }

                        &[data-href="color-white"] {
                            svg {
                                fill: black;
                            }
                        }
                    }
                }
            }

            a {
                display: inline-block;
                word-break: break-word;
                white-space: normal;
                color: inherit;
                font-size: 14px;
                font-weight: 400;
                line-height: 1.75;

                span {
                    vertical-align: middle;
                }

                svg {
                    width: 14px;
                    vertical-align: middle;
                    display: none;
                }

                &.active {
                    svg {
                        display: inline-block;
                    }
                }

                &:hover {
                    opacity: 0.75;
                }
            }
        }

        padding-bottom:12px;
    }
}

#shopify-section-collection__sidebar {
    position: relative;
    opacity: 0;
    visibility: hidden;
    transition: all .2s ease;
    width: 0;

    &.is_sidebar_show {
        visibility: visible;
        opacity: 1;
        width: 25%;
    }
}

#shopify-section-collection__main {
    transition: all .2s ease;
}

#shopify-section-collection__sidebar {
    &+.has-sidebar-option {
        width: 75%;
    }
}

#filter--sidebarToggle {
    cursor: pointer;
    outline: none;
    border: transparent;
    display: flex;
    font-size: 1.5em;
    line-height: 1.2;
    vertical-align: middle;
    padding: 0px 25px 0px 0px;
    background: transparent;

    &>span {
        padding-right: 8px;
        font-size: 16px;
    }

    &:hover,
    &.is--toogled {
        .icon-filters {
            &:after {
                box-shadow: currentcolor -8px 7px 0px 0px;
                transform: translate3d(11px, 1px, 0px);
            }
        }
    }

    .icon-filters {
        margin-top: 2px;
        width: 16px;
        height: 16px;
        position: relative;

        &:before {
            content: "";
            color: rgb(51, 51, 51);
            width: 100%;
            height: 2px;
            box-shadow: currentcolor 0px 7px 0px 0px;
            display: block;
            position: absolute;
            top: 3px;
            left: 0px;
            background: rgb(51, 51, 51);
        }

        &:after {
            content: "";
            color: rgb(51, 51, 51);
            width: 2px;
            height: 6px;
            box-shadow: currentcolor 8px 7px 0px 0px;
            display: block;
            position: absolute;
            top: 0px;
            left: 0px;
            transform: translate3d(3px, 1px, 0px);
            background: rgb(51, 51, 51);
            transition: transform 200ms ease 0s, box-shadow 200ms ease 0s;
        }
    }
}